{
	"title": "Weapon Component Schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"hid": {
			"description": "Human id for this element",
			"type": "string",
			"minLength": 3,
			"maxLength": 50
		},
		"type": {
			"description": "type of component (base, qualifier1, qualifier2, quality)",
			"enum": [ "base", "qualifier1", "qualifier2", "quality" ],
			"default": "base"
		}
	},
	"required": [ "hid", "type" ],
	"offirmo_extensions": {
		"hid": "weapon_component",
		"static": true,
		"primary_key_components": [ "type", "hid" ],
		"i18n_keys_mandatory": {
			"*": [ "main" ]
		},
		"i18n_keys_optional": {
			"fr": [ "gender" ]
		}
	}
}
